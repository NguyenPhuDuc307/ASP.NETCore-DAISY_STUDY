@using DaisyStudy.Models.Common;
@model PagedResult<DaisyStudy.Models.Catalog.Question.QuestionViewModel>

@{
    ViewData["Title"] = "Danh sách câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>

    <script src="/js/plugins/mustache.min.js"></script>    
    <script src="/js/controllers/questionController.js"></script>

}
<div class="container-fluid">
    <h1 class="mt-4">Danh sách câu hỏi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/Class">Câu hỏi</a></li>
        <li class="breadcrumb-item active">Danh sách câu hỏi</li>
    </ol>
    
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách câu hỏi</h6>
        </div>
        <div class="card-header">
            <div style="padding: 0;" class="col-md-6 col-xs-12">
                <a class="btn btn-success" asp-action="Create" asp-controller="Question">Tạo mới</a>
            </div>
        </div>

        <div class="card-body" style="padding-top: 0;">
            <div class="table-responsive">
                <form asp-action="Index" method="get">
                    <div class="col-sm-12 col-md-6 my-3">
                        <div class="row">
                            @if (ViewBag.SuccessMsg != null)
                            {
                                <div id="msgAlert" class="alert alert-success" role="alert">
                                    @ViewBag.SuccessMsg
                                </div>
                            }
                        </div>
                        <div class="dataTables_filter">
                            <div class="input-group">
                                <input value="@ViewBag.Keyword" name="keyword" type="search"
                                    class="form-control bg-light border-0 small" placeholder="Tìm kiếm..."
                                    aria-controls="dataTable">
                                <div class="input-group-append">
                                    <a href="/Class" class="btn btn-secondary" type="submit">
                                        <i class="fa-solid fa-rotate-left"></i>
                                    </a>
                                </div>
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Mã kỳ thi
                            </th>
                            <th>
                                Câu hỏi
                            </th>
                            <th>
                                Điểm
                            </th>
                            <th>
                                Hình ảnh
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbData">
                        @* @if (Model.Items != null)
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExamScheduleID)
                                    </td>
                                    <td>
                                        @Html.Raw(item.QuestionString)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Point)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImagePath)
                                    </td>
                                   
                                    <td>
                                        <a style="text-decoration: none;"
                                    href="@Url.Action("Details", "Question", new { id = item.QuestionID })">
                                            <i class="fa-solid fa-circle-info"></i>
                                        </a>
                                        <a style="text-decoration: none;"
                                    href="@Url.Action("Edit", "Question", new { id = item.QuestionID })">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a style="text-decoration: none;"
                                    href="@Url.Action("Delete", "Question", new { id = item.QuestionID })">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        } *@
                    </tbody>
                </table>
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>

<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{ExamScheduleID}}</td>
        <td>{{QuestionString}}</td>
        <td>{{Point}}</td>
        <td>{{ImagePath}}</td>
    </tr>
</script>